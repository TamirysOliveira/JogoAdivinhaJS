<!doctype html> 
<head>
	<meta charset="UTF-8">
	<title> Joguinho em JavaScript </title> 
</head>
<body>
<script>
	function pulaLinha(){ 
		document.write ("<br>");
	}

	function mostra(frase){
		document.write(frase);
		pulaLinha();
	}

	function sorteiaNumero(n){
		var resultado = (Math.floor(Math.random()*n));
		return resultado;

	}

	var numeroEscolhido = sorteiaNumero (parseInt (prompt("Coloque um número máximo para eu sortear")));

	console.log("Número escolhido: "+numeroEscolhido);
	
	var chute = parseInt (prompt ("Tente adivinhar em qual número eu pensei.."));

	var contador = 1;
	while (contador < 3) {
		console.log("Número chutado: "+chute);
		if (chute == numeroEscolhido){
			break;
		}
		if(chute>numeroEscolhido){
			alert("Seu chute foi muito alto!");
		} else{
			alert("Seu chute foi muito baixo!");
		}
		chute = parseInt(prompt("Tente de novo!"));
		contador++;
	}
	if (chute==numeroEscolhido){
		mostra ("Uau! Você acertou!");
	}
	else {
		console.log ("Número chutado: "+numeroEscolhido);
		mostra ("Que pena, suas chances acabaram...");
	}
</script> 
</body>
</html>
